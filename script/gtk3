#!/bin/bash

PKG_NAME=$1
PKG_VERSION=3.24.4

PKG_DEPENDS="pango gdk-pixbuf at-spi2-atk libepoxy libXcursos libXcomposite libXinerama"
PKG_MAINTAINER="Peter Mattis <petm@xcf.berkeley.edu>, et al"
PKG_SECTION="gnome"
PKG_SHORTDESC="GTK+ is a multi-platform toolkit for creating graphical user interfaces."

buildpkg() {
  ../configure ${TARGET_CONFIGURE_OPTS} \
    --enable-x11-backend

  make $MAKEFLAGS
  make DESTDIR=$INSTALL_PKG install
}
